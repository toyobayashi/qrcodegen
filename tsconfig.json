{
  "compilerOptions": {
    "outDir": "./lib/cjs",
    "target": "ES2019",
    "allowJs": true,
    "module": "CommonJS",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "include": [
    "./src/**/*"
  ]
}
